<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0-android;net7.0-ios;net7.0-maccatalyst</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <RootNamespace>CrossHealthX</RootNamespace>
    <UseMaui>true</UseMaui>
    <SingleProject>true</SingleProject>

    <ApplicationTitle>CrossHealthX</ApplicationTitle>
    <ApplicationId>com.crosshealthx.app</ApplicationId>
    <ApplicationVersion>1.0.0</ApplicationVersion>
  </PropertyGroup>

  <!-- Всі PNG іконки -->
  <ItemGroup>
    <MauiImage Include="Resources/Images/*.png"
               BaseSize="64,64" />
  </ItemGroup>

  <!-- App Icon -->
  <ItemGroup>
    <MauiIcon Include="Resources/Images/appicon.png"
              ForegroundFile="Resources/Images/logo.png"
              Color="#FFFFFF" />
  </ItemGroup>

  <!-- Splash Screen -->
  <ItemGroup>
    <MauiSplashScreen Include="Resources/Images/logo.png"
                      Color="#FFFFFF" 
                      BaseSize="512,512" />
  </ItemGroup>

  <!-- Залежності -->
  <ItemGroup>
    <PackageReference Include="sqlite-net-pcl" Version="1.9.0" />
    <PackageReference Include="OxyPlot.Maui" Version="2.1.0" />
  </ItemGroup>

</Project>
